<Application
    x:Class="Shokpod10.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Shokpod10"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="PhoneAccentBrush" Color="White"/>
            <SolidColorBrush x:Key="PageTitleBackgroundColor" Color="#FF7BC143"/>
            <SolidColorBrush x:Key="TextForegroundColor" Color="#FFFFFFFF"/>
        </ResourceDictionary>

    </Application.Resources>

</Application>
